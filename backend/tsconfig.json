{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2020", "DOM"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
